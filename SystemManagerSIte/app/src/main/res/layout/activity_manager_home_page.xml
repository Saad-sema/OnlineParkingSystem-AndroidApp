<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="#208080"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/topBarTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="System Manager"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="start|center_vertical"/>

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:contentDescription="Manager Profile"
            android:focusable="true"
            android:scaleType="centerCrop"
            android:src="@drawable/person" />
    </LinearLayout>

    <!-- Right popup layout (Initially hidden) -->

    <!-- Overlay for closing popup by clicking outside (Initially hidden) -->
    <View
        android:id="@+id/overlayView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        android:visibility="gone"/>

    <!-- Main content - ScrollView for containers -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <LinearLayout
            android:id="@+id/bookingContainerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <LinearLayout
                android:id="@+id/btnViewBooking"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_container"
                android:clickable="true"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View All Booking's"
                    android:textColor="#46607C"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnConfirmReservation"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_container"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confirm Reservation"
                    android:textColor="#46607C"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnExtendDuration"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_container"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extend Parking Duration"
                    android:textColor="#46607C"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnExtend"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_container"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancel Late Arrivals"
                    android:textColor="#46607C"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnATComp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_container"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About To Complete"
                    android:textColor="#46607C"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnHistory"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_container"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parking History"
                    android:textColor="#46607C"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>
            <!-- Five clickable containers same as previous answer -->
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/managerPopup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/popup_bg"
        android:orientation="vertical"
        android:padding="18dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/managerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Manager Id :- manage2@example.com"
            android:textColor="#333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/managerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:text="Manager Name :- Manager2"
            android:textColor="#333"
            android:textSize="16sp" />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e74c3c"
            android:gravity="center"
            android:text="Logout"
            android:textColor="#fff"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
