<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/about_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/glass_card"
            android:padding="30dp"
            android:elevation="8dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/about_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="About ParkExpert"
                android:textColor="@color/drawer_menu_text"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Welcome to Smart Parking, your go-to solution for hassle-free parking slot reservations, built for both convenience and control."
                android:textColor="#CCEFFF"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Our platform empowers users with:"
                android:layout_marginTop="20dp"
                android:textColor="#CCEFFF"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Real-time parking slot search and booking"
                    android:textColor="#B9E9F9"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• UPI-based secure payment integration"
                    android:textColor="#B9E9F9"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Full booking lifecycle management — book, extend, cancel"
                    android:textColor="#B9E9F9"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Detailed booking history and receipts"
                    android:textColor="#B9E9F9"
                    android:textSize="15sp"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• Optional admin and manager portals for advanced management"
                    android:textColor="#B9E9F9"
                    android:textSize="15sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We're committed to simplifying urban parking with smart tech. Thank you for using our system!"
                android:layout_marginTop="20dp"
                android:textColor="#CCEFFF"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp" />

            <Button
                android:id="@+id/back_to_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="← Back to Home"
                android:textStyle="bold"
                android:textColor="#0D1B2A"
                android:backgroundTint="#00FFF7"
                android:layout_marginTop="30dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
