<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#121620">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121620"
        android:padding="16dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#1F2937"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AppTheme" />

        <!-- Entry / Exit Time Filters -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:weightSum="3"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_entry_time"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Entry DateTime"
                android:focusable="false"
                android:clickable="true"
                android:background="@drawable/edittext_bg_dark"
                android:padding="12dp"
                android:textColor="#ECEFF4"
                android:textSize="16sp"
               />

            <EditText
                android:id="@+id/et_exit_time"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:hint="Exit DateTime"
                android:focusable="false"
                android:clickable="true"
                android:background="@drawable/edittext_bg_dark"
                android:padding="12dp"
                android:textColor="#ECEFF4"
                android:textSize="16sp"
             />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Search"
                android:backgroundTint="#81A1C1"
                android:textColor="#ECEFF4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:elevation="4dp" />
        </LinearLayout>

        <!-- ListView -->
        <ListView
            android:id="@+id/listview_parking_slots"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:dividerHeight="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="#1E293B" />

    </LinearLayout>

    <!-- Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="#1E293B"
        app:headerLayout="@layout/user_nav_header_"
        app:menu="@menu/drawer_menu"
        app:itemTextColor="@color/drawer_menu_text"
        app:itemIconTint="@color/drawer_menu_icon"/>

</androidx.drawerlayout.widget.DrawerLayout>
