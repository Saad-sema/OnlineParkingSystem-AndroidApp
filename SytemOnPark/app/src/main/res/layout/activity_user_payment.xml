<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:background="@drawable/bg_payment_dark">

    <!-- Card Background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:elevation="8dp"
        android:background="@drawable/card_bg_dark">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="ðŸ’³ Secure Payment"
            android:textColor="#38B2AC"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Amount -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount to Pay"
            android:textColor="#A0AEC0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_payment_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_bg_dark"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:padding="14dp"
            android:textColor="#F7FAFC"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Payment Method -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Payment Method"
            android:textColor="#A0AEC0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rg_payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_upi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pay via UPI"
                android:checked="true"
                android:textColor="#CBD5E0"
                android:buttonTint="#38B2AC" />
        </RadioGroup>

        <!-- UPI ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPI ID"
            android:textColor="#A0AEC0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_upi_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_bg_dark"
            android:hint="example@upi"
            android:inputType="textEmailAddress"
            android:padding="14dp"
            android:textColorHint="#718096"
            android:textColor="#F7FAFC"
            android:textSize="15sp" />

        <!-- Pay Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pay"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/bg_slot_icon_dark"
            android:elevation="6dp"
            android:text="Pay Now"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#38B2AC" />
    </LinearLayout>
</LinearLayout>
