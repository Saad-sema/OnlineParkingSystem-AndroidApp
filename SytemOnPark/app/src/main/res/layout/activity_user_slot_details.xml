<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121620"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Slot Image Slider -->
    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/img_slider_detail"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/card_bg_dark"
        app:iss_auto_cycle="false"
        app:iss_placeholder="@color/cardview_light_background"
        app:iss_period="1000"
        app:iss_delay="1000"
        app:iss_corner_radius="30" />

    <!-- Slot Name -->
    <TextView
        android:id="@+id/tv_slot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="E20"
        android:textColor="#E5E9F0"
        android:textSize="28sp"
        android:textStyle="bold" />

    <!-- Location or Map -->
    <TextView
        android:id="@+id/tv_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Level 2, Zone B"
        android:textColor="#A0AEC0"
        android:textSize="17sp" />

    <!-- Details (Availability, Price, etc.) -->
    <TextView
        android:id="@+id/tv_slot_Fees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:text="Rate Per Hour : 20.00"
        android:textColor="#CBD5E0"
        android:textSize="16sp" />

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Book Now Button -->
    <Button
        android:id="@+id/btn_book_now_detail"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:backgroundTint="#81A1C1"
        android:elevation="8dp"
        android:text="Book Now"
        android:textAllCaps="false"
        android:textColor="#ECEFF4"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
