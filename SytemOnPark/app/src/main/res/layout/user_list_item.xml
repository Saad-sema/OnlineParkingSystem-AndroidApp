<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    card_view:cardUseCompatPadding="true"
    android:background="@drawable/slot_item_bg_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">

        <!-- Slot Image -->
        <ImageView
            android:id="@+id/img_slot"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/slot_icon_bg_dark"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/images" />

        <!-- Slot Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_slot_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="E20"
                android:textColor="#0F111A"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fees"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="â‚¹50 per hour"
                android:textColor="#A0AEC0"
            android:textSize="14sp" />
        </LinearLayout>

        <!-- Status -->
        <TextView
            android:id="@+id/tv_Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dp"
            android:text="Available"
            android:textColor="#81A1C1"
        android:textStyle="bold"
        android:textSize="14sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
