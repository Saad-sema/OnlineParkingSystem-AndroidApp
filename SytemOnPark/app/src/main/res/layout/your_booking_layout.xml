<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/booking_card_bg_dark"
    android:elevation="6dp"
    android:orientation="vertical"
    android:padding="14dp">

    <!-- Info Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/info_inner_bg_dark"
        android:elevation="4dp">

        <!-- First Row: User Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name:"
                android:textColor="#A0AEC0"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saad Sema"
                android:textSize="16sp"
                android:textColor="#F7FAFC"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center">

            <!-- Phone No -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="Phone No:"
                    android:textSize="12sp"
                    android:textColor="#A0AEC0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvPhoneNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1010101010"
                    android:textSize="14sp"
                    android:textColor="#E2E8F0"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Slot Name -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="Slot Name:"
                    android:textSize="12sp"
                    android:textColor="#A0AEC0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvSlotName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E20"
                    android:textSize="14sp"
                    android:textColor="#E2E8F0"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Vehicle No -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="Vehicle No:"
                    android:textSize="12sp"
                    android:textColor="#A0AEC0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvVehicleNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GJ15AC4783"
                    android:textSize="14sp"
                    android:textColor="#E2E8F0"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Third Row: Entry | Exit | Payment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="center">

            <!-- Entry Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="Entry Time:"
                    android:textSize="12sp"
                    android:textColor="#A0AEC0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvEntryTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/02/2025 10:00:00"
                    android:textSize="13sp"
                    android:textColor="#CBD5E0"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Exit Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="Exit Time:"
                    android:textSize="12sp"
                    android:textColor="#A0AEC0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvExitTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01/02/2025 10:00:00"
                    android:textSize="13sp"
                    android:textColor="#CBD5E0"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Payment Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:text="Payment Status:"
                    android:textSize="12sp"
                    android:textColor="#A0AEC0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tvPaymentStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Success"
                    android:textSize="13sp"
                    android:textColor="#48BB78"
                android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="14dp"
        android:background="#2D3748" />

    <!-- Button Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnExtend"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:backgroundTint="#5A67D8"
            android:text="Extend"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="3dp" />
    </LinearLayout>
</LinearLayout>
